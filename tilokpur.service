[Unit]
Description=gunicorn daemon
Requires=tilokpur.socket
After=network.target

[Service]
User=sammy
Group=www-data
WorkingDirectory=/home/sumon/tilokpur/union
ExecStart=/home/sumon/tilokpur/.env/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:/run/tilokpur.sock \
          myproject.wsgi:application

[Install]
WantedBy=multi-user.target
